<?xml version="1.0"?>
  <project name="Kvadrato" default="compile">
    <target name="clean" description="delete all ??non-source?? files">
      <delete dir="build"/>
      <delete file="KvadratoDebug.jar"/>
      <delete file="Kvadrato.jar"/>
    </target>
    <target name="compile" depends="debug"/>
    <target name="debug" description="make class files">
      <mkdir dir="build"/>
      <javac srcdir="src" destdir="build" includeantruntime="false"/>
    </target>
    <target name="jar" depends="compile" description="create jar">
      <jar destfile="KvadratoDebug.jar">
        <fileset dir="build" includes="**/*.class"/>
        <fileset dir="src" includes="**/*.fxml"/>
        <manifest>
          <attribute name="Main-Class" value="kvadrato.App"/>
        </manifest>
      </jar>
    </target>
    <target name="roll" depends="clean,jar,run">
    </target>
    <target name="run" depends="jar">
      <java fork="true" jar="KvadratoDebug.jar"/>
    </target>
  </project>
