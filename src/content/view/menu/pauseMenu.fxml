<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Group?>

<?import kvadrato.gui.menu.PauseMenu?>
<?import kvadrato.gui.RectangleButton?>
<?import kvadrato.gui.RectangleText?>

<fx:root
  type="PauseMenu"
  xmlns="http://javafx.com/javafx/8.0.162-ea"
  xmlns:fx="http://javafx.com/fxml/1"
>
  <children>
    <Group
      fx:id="restartSquare"
      translateX="-200.0"
      onMouseClicked="#restartClick"
      onMouseEntered="#restartEnter"
      onMouseMoved=  "#restartEnter"
    >
      <StackPane>
        <RectangleButton
          width="180.0"
          height="180.0"
          />
        <RectangleText text="Od nowa"/>
      </StackPane>
    </Group>
    <Group
      fx:id="resumeSquare"
      onMouseClicked="#resumeClick"
      onMouseEntered="#resumeEnter"
      onMouseMoved=  "#resumeEnter"
    >
      <StackPane>
        <RectangleButton
          width="180.0"
          height="180.0"
          />
        <RectangleText text="Wróć"/>
      </StackPane>
    </Group>
    <Group
      fx:id="backSquare"
      translateX="200.0"
      onMouseClicked="#backClick"
      onMouseEntered="#backEnter"
      onMouseMoved=  "#backEnter"
    >
      <StackPane>
        <RectangleButton
          width="180.0"
          height="180.0"
        />
        <RectangleText text="Menu"/>
      </StackPane>
    </Group>
  </children>
</fx:root>
