<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>

<?import kvadrato.gui.RectangleButton?>
<?import kvadrato.gui.menu.MainMenu?>

<fx:root
  type="MainMenu"
  xmlns="http://javafx.com/javafx/8.0.162-ea"
  xmlns:fx="http://javafx.com/fxml/1"
>
  <children>
    <Group
      fx:id="helpSquare"
      translateX="-90.0"
      onMouseClicked="#helpClick"
      onMouseEntered="#helpEnter"
      onMouseMoved=  "#helpEnter"
    >
      <RectangleButton
        width="180.0"
        height="180.0"
      />
      <Label text="Pomoc"/>
    </Group>
    <Group
      fx:id="quitSquare"
      translateX="90.0"
      onMouseClicked="#quitClick"
      onMouseEntered="#quitEnter"
      onMouseMoved=  "#quitEnter"
    >
      <RectangleButton
        width="180.0"
        height="180.0"
      />
      <Label text="WyjÅ›cie"/>
    </Group>
    <Group
      fx:id="playSquare"
    >
      <RectangleButton
        width="360.0"
        height="360.0"
        onMouseClicked="#playClick"
        onMouseEntered="#playEnter"
        onMouseMoved=  "#playEnter"
        onMouseExited= "#playExit"
      />
      <Label text="Graj"/>
    </Group>
  </children>
</fx:root>
